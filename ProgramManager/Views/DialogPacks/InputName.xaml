<Window
    x:Class="ProgramManager.Views.DialogPacks.InputName"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProgramManager.Views.DialogPacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ProgramManager.ViewModels"
    Title="InputName"
    Width="300"
    Height="150"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Введите имя поля:" />
        <TextBox
            Name="FieldName"
            Grid.Row="1"
            Margin="10,5,10,5"
            Tag="Имя:" />
        <Button
            Grid.Row="2"
            Width="100"
            Height="25"
            Command="{Binding AddTextField}"
            CommandParameter="{Binding Text, ElementName=FieldName}"
            Content="Добавить" />
    </Grid>
</Window>
